{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true, // Express+TS becomes much safer
        "esModuleInterop": true, // allows smooth interop with CJS-only like older express middlewares
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true, // removes noises from type-library conflicts
        "resolveJsonModule": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
}
